<%- include("../includes/head.ejs") %> 
  </head>
  <body>
    <%- include("../includes/navigation.ejs") %> 
    <div class="centered">
      <h1>Menu</h1>
      <% products.forEach(product => { %>
        <div class="product-item">
          <h1 class="product-item__title"><%= product.title %> </h1>
          <img class="product-item__image" src="<%= product.imageUrl %>" alt="<%= product.imageUrl %>"> 
          <p class="product-item__description"><%= product.description %> </p>
          <p class="product-item__price"> <%= product.price %> </p>
        </div>
      <% }) %>
    </div>
    
   
</html>
